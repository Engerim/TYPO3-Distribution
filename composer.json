{
    "repositories": [
        { "type": "composer", "url": "https://composer.typo3.org/" }
    ],
    "name": "helhum/typo3-distribution",
    "description" : "TYPO3 CMS Distribution with console and .env support",
    "license": "GPL-2.0+",
    "require": {
        "typo3/cms": "^7.6.0",
        "symfony/process": "~2.7.0",
        "helhum/dotenv-connector": "^1.0.0",
        "helhum/config-loader": "1.0.*@dev",
        "helhum/typo3-console": "^3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8.0",
        "mikey179/vfsStream": "~1.6.0"
    },
    "autoload": {
        "psr-4": {
            "Helhum\\TYPO3\\Distribution\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TYPO3\\CMS\\Core\\Tests\\": "vendor/typo3/cms/typo3/sysext/core/Tests"
        }
    },
    "scripts": {
        "package-states": [
            "./typo3cms install:generatepackagestates"
        ],
        "folder-structure": [
            "./typo3cms install:fixfolderstructure"
        ],
        "pre-deploy": [
            "@package-states",
            "@folder-structure"
        ],
        "post-autoload-dump": [
            "@pre-deploy"
        ]
    },
    "extra": {
        "helhum/typo3-console": {
            "active-typo3-extensions": [
                "belog",
                "beuser",
                "context_help",
                "fluid_styled_content",
                "extra_page_cm_options",
                "felogin",
                "filelist",
                "impexp",
                "info",
                "info_pagetsconfig",
                "lowlevel",
                "perm",
                "reports",
                "rsaauth",
                "rtehtmlarea",
                "scheduler",
                "setup",
                "tstemplate",
                "viewpage"
            ]
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "web"
        },
        "helhum/dotenv-connector": {
            "cache-dir": "var/cache"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
